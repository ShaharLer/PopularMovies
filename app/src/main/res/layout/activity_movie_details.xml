<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/details_activity_padding_horizontal"
            android:paddingEnd="@dimen/details_activity_padding_horizontal"
            android:paddingTop="@dimen/details_activity_title_padding_top_bottom"
            android:paddingBottom="@dimen/details_activity_title_padding_top_bottom"
            android:textColor="@android:color/white"
            android:textSize="@dimen/original_title_size"
            android:background="@color/colorMovieTitle"/>

        <RelativeLayout
            android:id="@+id/image_and_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/details_activity_image_details_margin_top"
            android:paddingStart="@dimen/details_activity_padding_horizontal"
            android:paddingEnd="@dimen/details_activity_padding_horizontal">

            <ImageView
                android:id="@+id/movie_details_image"
                android:layout_width="@dimen/details_activity_image_width"
                android:layout_height="@dimen/details_activity_image_height"
                android:contentDescription="@string/movie_image_description"
                android:scaleType="fitXY"
                android:paddingTop="@dimen/image_padding_top"/>

            <LinearLayout
                android:id="@+id/details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/movie_details_image"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/details_activity_layout_padding">

                <TextView
                    android:id="@+id/release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/release_date_padding_bottom"
                    android:textSize="@dimen/release_date_text_size"/>

                <TextView
                    android:id="@+id/vote_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/vote_average_text_size"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/details_activity_margin"
            android:paddingTop="@dimen/details_activity_overview_padding_top"
            android:textSize="@dimen/details_activity_overview_text_size"/>

    </LinearLayout>

</ScrollView>